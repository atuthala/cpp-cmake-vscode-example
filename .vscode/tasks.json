{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Clean coverage files",
      "type": "shell",
      "command": "find ${workspaceFolder}/build/clang-deb-ninja -name '*.gcda' -delete && find ${workspaceFolder}/build/clang-deb-ninja -name '*.gcno' -delete",
      "problemMatcher": []
    },
    {
      "label": "Build project",
      "type": "shell",
      "command": "cmake --build ${workspaceFolder}/build/clang-deb-ninja",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "dependsOn": "Clean coverage files",
      "problemMatcher": []
    }
  ]
}