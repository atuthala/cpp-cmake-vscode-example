{
  // ===== clangd =====
  "clangd.path": "/usr/bin/clangd",
  "clangd.arguments": [
    "--compile-commands-dir=build/clang-deb-ninja",
    "--background-index",
    "--clang-tidy",
    // "--completion-style=detailed",
    // "--header-insertion=iwyu",
    // "--header-insertion-decorators",
    // "--pch-storage=memory"
  ],
  
  // Отключаем Microsoft IntelliSense
  "C_Cpp.intelliSenseEngine": "disabled",

  // Форматирование
  // "editor.formatOnSave": true,
  // CMake
  "cmake.configureOnOpen": true,
  "cmake.buildDirectory": "${workspaceFolder}/build/clang-deb-ninja",

  // (важно) отключаем fallback
  "C_Cpp.autocomplete": "disabled",
  "C_Cpp.errorSquiggles": "disabled",
}